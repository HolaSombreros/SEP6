@inject AuthenticationStateProvider AuthenticationStateProvider

<div class="main-header">
    <div class="logo">
        <img src="Images/Movie logo.png" alt="Logo"/>
    </div>
    <div class="toggle-nav">
        <span class="oi oi-cog" @onclick="ToggleNavMenu"></span>
    </div>
</div>

<div class="nav-base @NavMenuCssClass">
    <div class="nav-item">
        <a href="" @onclick="ToggleNavMenu">
            <span class="oi oi-home"></span> Home
        </a>
    </div>
    <AuthorizeView>
         <Authorized>
            <div class="nav-item">
            <a href="/" @onclick="LogoutAsync">
                <span class="oi oi-account-logout"></span> Logout
            </a>
            </div>
        </Authorized>
        <NotAuthorized>
            <div class="nav-item">
                <a href="/Login">
                    <span class="oi oi-account-login"></span> Login
                </a>
            </div>
        </NotAuthorized>
    </AuthorizeView>
</div>
