@if (Movie != null)
{
	<div class="movie-card">
		<div class="rating-container">
			@Movie.Ratings.Select(rating => rating.StarRating).Average()
		</div>
		<img class="image" src="@Movie.PosterPath" alt="Image not found" @onclick="(() => ShowMovieDetails(Movie.Id))" />
		<div class="movie-details">
			<h3>@Movie.Title</h3>
			<p>@Movie.ReleaseDate</p>
		</div>
	</div>
}
